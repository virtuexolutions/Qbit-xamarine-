                            </StackLayout>
                        </ScrollView>
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            
            <Grid Grid.RowSpan="2" IsVisible="{Binding IsLoader}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.RowSpan="2" BackgroundColor="Transparent" Opacity="0.8"/>
                <Loader:CustomLoaderWait Grid.RowSpan="2" VerticalOptions="CenterAndExpand" IsVisibleAndIsRunning="{Binding IsLoader}"/>
            </Grid>

            <!--Web View for show PDF-->
            <Grid Grid.Row="1" IsVisible="{Binding IsPDF}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" BackgroundColor="#464a50" Opacity="0.8">
                </Grid>
                <Frame Padding="0" Margin="20" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Margin="10">
                        <WebView Source="{Binding PDF}" Navigated="WebView_Navigated" Navigating="WebView_Navigating" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    </StackLayout>
                </Frame>                
            </Grid>
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CommandClosePDF}" CommandParameter="{Binding .}"/>
            </Grid.GestureRecognizers>

            
        </Grid>
    </ContentPage.Content>
</ContentPage>